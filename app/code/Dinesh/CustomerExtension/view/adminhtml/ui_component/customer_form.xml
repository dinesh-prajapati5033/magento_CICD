<?xml version="1.0" encoding="UTF-8"?>
<uiComponent name="customer_form" xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui:etc/ui_configuration.xsd">
    <dataSource name="customer_form_data_source">
        <settings>
            <submitUrl path="adminhtml/customer/save"/>
        </settings>
        <dataProvider class="Magento\Customer\Model\Customer\DataProvider" name="customer_form_data_source"/>
    </dataSource>
    <form>
        <fieldset name="general">
            <field name="password">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Password</label>
                    <visible>true</visible>
                    <required>true</required>
                    <formElement>input</formElement>
                    <dataScope>password</dataScope>
                </settings>
            </field>
        </fieldset>
    </form>
</uiComponent>
