<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- <css src="Mageants_FrequentlyBought::css/style.css"/> -->
        <!-- <css src="Magento_Swatches::css/swatches.css"/> -->
    </head>
    <body>
        <referenceContainer name="content">
            <container name="Mageants.frequently.bought.together" htmlTag="div" htmlClass="mageants-frequently-bought-together-block" after="product.info.details">
                <block class="Mageants\FrequentlyBought\Block\Product\ProductList\FrequentlyBought" name="mageants.frequently.bought.together" template="Mageants_FrequentlyBought::product/list/items.phtml" ifconfig="fbt_section/bought_together_settings/enable_disable">
                    <block class="Magento\Catalog\Block\Product\View\Options" name="mageants.frequently.bought.product.info.options" as="frequently_bought_product_options" template="Mageants_FrequentlyBought::product/view/options.phtml">
                        <block class="Magento\Catalog\Block\Product\View\Options\Type\DefaultType" as="default" template="product/view/options/type/default.phtml"/>
                        <block class="Magento\Catalog\Block\Product\View\Options\Type\Text" as="text" template="Mageants_FrequentlyBought::product/view/options/type/text.phtml"/>
                        <block class="Magento\Catalog\Block\Product\View\Options\Type\File" as="file" template="Mageants_FrequentlyBought::product/view/options/type/file.phtml"/>
                        <block class="Magento\Catalog\Block\Product\View\Options\Type\Select" as="select" template="Mageants_FrequentlyBought::product/view/options/type/select.phtml"/>
                        <block class="Mageants\FrequentlyBought\Block\Product\View\Options\Type\Date" as="date" template="Mageants_FrequentlyBought::product/view/options/type/date.phtml"/>
                    </block>
                    <block class="Magento\Bundle\Block\Catalog\Product\View\Type\Bundle" name="mageants.fbt.product.info.bundle.options" as="type_bundle_options" template="Mageants_FrequentlyBought::product/view/type/bundle/options.phtml" before="-">
                        <block class="Magento\Bundle\Block\Catalog\Product\View\Type\Bundle\Option\Select" name="mageants.fbt.product.info.bundle.options.select" as="select" template="Mageants_FrequentlyBought::product/view/type/bundle/option/select.phtml"/>
                        <block class="Magento\Bundle\Block\Catalog\Product\View\Type\Bundle\Option\Multi" name="mageants.fbt.product.info.bundle.options.multi" as="multi" template="Mageants_FrequentlyBought::product/view/type/bundle/option/multi.phtml"/>
                        <block class="Magento\Bundle\Block\Catalog\Product\View\Type\Bundle\Option\Radio" name="mageants.fbt.product.info.bundle.options.radio" as="radio" template="Mageants_FrequentlyBought::product/view/type/bundle/option/radio.phtml"/>
                        <block class="Magento\Bundle\Block\Catalog\Product\View\Type\Bundle\Option\Checkbox" name="mageants.fbt.product.info.bundle.options.checkbox" as="checkbox" template="Mageants_FrequentlyBought::product/view/type/bundle/option/checkbox.phtml"/>
                    </block>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
